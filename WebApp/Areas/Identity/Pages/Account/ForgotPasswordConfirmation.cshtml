@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmation de réinitialisation du mot de passe";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.HasUser && !string.IsNullOrEmpty(Model.ResetLink))
                    {
                        <div class="alert alert-success alert-persistent" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-check-circle me-2"></i>Lien de réinitialisation généré
                            </h5>
                            <p>Un lien de réinitialisation a été généré pour l'adresse email : <strong>@Model.Email</strong></p>
                            <hr>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Lien de réinitialisation (mode développement) :</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="resetLink" value="@Model.ResetLink" readonly />
                                    <button class="btn btn-outline-secondary" type="button" onclick="copyToClipboard()">
                                        <i class="fas fa-copy"></i> Copier
                                    </button>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Ce lien est affiché directement pour faciliter le développement. 
                                    En production, il serait envoyé par email.
                                </small>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a href="@Model.ResetLink" class="btn btn-primary btn-lg">
                                    <i class="fas fa-key me-2"></i>Réinitialiser mon mot de passe maintenant
                                </a>
                            </div>
                        </div>
                        
                        <div class="alert alert-warning alert-persistent" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-exclamation-triangle me-2"></i>Important - Mode développement
                            </h6>
                            <ul class="mb-0">
                                <li>Ce lien est valide pendant une durée limitée</li>
                                <li>Il ne peut être utilisé qu'une seule fois</li>
                                <li>En production, ce lien serait envoyé de manière sécurisée par email</li>
                            </ul>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <div class="alert alert-info alert-persistent" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-info-circle me-2"></i>Demande traitée
                            </h5>
                            <p>
                                Si un compte correspond à l'adresse <strong>@Model.Email</strong>, 
                                un email de réinitialisation lui serait envoyé en production.
                            </p>
                            <p class="mb-0">
                                <i class="fas fa-shield-alt me-1 text-muted"></i>
                                <small class="text-muted">
                                    Pour des raisons de sécurité, nous ne confirmons pas l'existence des comptes.
                                </small>
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-primary alert-persistent" role="alert">
                            <h5 class="alert-heading">
                                <i class="fas fa-envelope me-2"></i>Instructions envoyées
                            </h5>
                            <p class="mb-0">
                                Veuillez vérifier votre email pour réinitialiser votre mot de passe.
                            </p>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <a asp-page="./Login" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            var copyText = document.getElementById("resetLink");
            copyText.select();
            copyText.setSelectionRange(0, 99999); // Pour les appareils mobiles
            
            try {
                document.execCommand("copy");
                
                // Feedback visuel
                var button = event.target.closest('button');
                var originalContent = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copié !';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');
                
                setTimeout(function() {
                    button.innerHTML = originalContent;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            } catch (err) {
                console.error('Erreur lors de la copie : ', err);
                alert('Impossible de copier automatiquement. Veuillez sélectionner et copier manuellement.');
            }
        }
    </script>
}
