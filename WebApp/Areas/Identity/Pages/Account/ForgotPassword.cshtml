@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Mot de passe oublié ?";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Saisissez votre adresse email pour générer un lien de réinitialisation de mot de passe.
                    </p>

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Veuillez corriger les erreurs suivantes :</strong>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" 
                                   autocomplete="username" 
                                   aria-required="true" 
                                   placeholder="nom@exemple.com" />
                            <label asp-for="Input.Email">
                                <i class="fas fa-envelope me-2"></i>Adresse email
                            </label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-paper-plane me-2"></i>
                                Générer le lien de réinitialisation
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-page="./Login" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                        </a>
                    </div>

                    <!-- Information de développement -->
                    <div class="alert alert-info alert-persistent mt-4" role="alert">
                        <h6 class="alert-heading">
                            <i class="fas fa-code me-2"></i>Mode développement
                        </h6>
                        <small>
                            Le lien de réinitialisation sera affiché directement sur la page suivante 
                            au lieu d'être envoyé par email. Cette fonctionnalité est prévue uniquement 
                            pour faciliter le développement.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Animation au focus des champs
        $(document).ready(function() {
            $('.form-floating input').focus(function() {
                $(this).closest('.form-floating').addClass('focused');
            }).blur(function() {
                $(this).closest('.form-floating').removeClass('focused');
            });
        });
    </script>

    <style>
        .form-floating.focused {
            transform: scale(1.02);
            transition: transform 0.2s ease;
        }

        .card {
            transition: box-shadow 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
