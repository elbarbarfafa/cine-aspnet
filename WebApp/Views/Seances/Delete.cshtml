@model WebApp.Models.Entities.Seance

@{
    ViewData["Title"] = "Supprimer la séance";
    var currentFilm = ViewData["CurrentFilm"] as WebApp.Models.Entities.Film;
}

<h1>Supprimer la séance</h1>

<div class="alert alert-warning">
    <h3>Êtes-vous sûr de vouloir supprimer cette séance ?</h3>
    <p>Cette action est irréversible.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Séance à supprimer - #@Model.Id</h4>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">@currentFilm?.Titre (@currentFilm?.Annee)</h5>
                        <p class="card-text"><strong>Genre :</strong> @currentFilm?.Genre</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Date :</dt>
                    <dd class="col-sm-8">@Model.DateSeance.ToString("dddd dd MMMM yyyy")</dd>
                    
                    <dt class="col-sm-4">Horaire :</dt>
                    <dd class="col-sm-8">@Model.Horaire.HeureDebut.ToString(@"hh\:mm") - @Model.Horaire.HeureFin.ToString(@"hh\:mm")</dd>
                    
                    <dt class="col-sm-4">Tarif :</dt>
                    <dd class="col-sm-8"><strong>@Model.Tarif.ToString("C")</strong></dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Cinéma :</dt>
                    <dd class="col-sm-8">@Model.Salle.CinemaNom</dd>
                    
                    <dt class="col-sm-4">Salle :</dt>
                    <dd class="col-sm-8">Salle n°@Model.Salle.Numero</dd>
                    
                    <dt class="col-sm-4">Capacité :</dt>
                    <dd class="col-sm-8">@Model.Salle.Capacite places</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Confirmer la suppression
    </button>
    <a asp-action="Details" asp-route-filmId="@currentFilm?.Id" asp-route-id="@Model.Id" class="btn btn-info">
        <i class="fas fa-eye"></i> Annuler
    </a>
    <a asp-action="Index" asp-route-filmId="@currentFilm?.Id" class="btn btn-secondary">
        <i class="fas fa-list"></i> Retour à la liste
    </a>
    <a asp-controller="Films" asp-action="Details" asp-route-id="@currentFilm?.Id" class="btn btn-outline-secondary">
        <i class="fas fa-film"></i> Retour au film
    </a>
</form>