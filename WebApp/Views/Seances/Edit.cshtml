@using WebApp.Models.ViewModels.Seance
@model EditSeanceViewModel

@{
    ViewData["Title"] = "Modifier la séance";
    var currentFilm = ViewData["CurrentFilm"] as WebApp.Models.Entities.Film;
}

<h1>Modifier la séance</h1>
<h4>Séance #@Model.Id pour le film "@currentFilm?.Titre"</h4>

<div class="mb-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@currentFilm?.Titre (@currentFilm?.Annee)</h5>
            <p class="card-text"><strong>Genre :</strong> @currentFilm?.Genre</p>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SalleCinemaNom" class="form-label"></label>
                        <input asp-for="SalleCinemaNom" class="form-control" placeholder="Nom du cinéma" />
                        <span asp-validation-for="SalleCinemaNom" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="SalleNumero" class="form-label"></label>
                        <input asp-for="SalleNumero" class="form-control" min="1" />
                        <span asp-validation-for="SalleNumero" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HoraireId" class="form-label"></label>
                <select asp-for="HoraireId" class="form-select" asp-items="@ViewBag.Horaires">
                    <option value="">Sélectionner un horaire</option>
                </select>
                <span asp-validation-for="HoraireId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateSeance" class="form-label"></label>
                <input asp-for="DateSeance" class="form-control" type="date" />
                <span asp-validation-for="DateSeance" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tarif" class="form-label"></label>
                <input asp-for="Tarif" class="form-control" type="number" step="0.01" min="0.01" />
                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary" />
                <a asp-action="Details" asp-route-filmId="@currentFilm?.Id" asp-route-id="@Model.Id" class="btn btn-info">Annuler</a>
                <a asp-action="Index" asp-route-filmId="@currentFilm?.Id" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}}