@using WebApp.Models.ViewModels.Seance
@model CreateSeanceViewModel

@{
    ViewData["Title"] = "Créer une séance";
    var currentFilm = ViewData["CurrentFilm"] as WebApp.Models.Entities.Film;
}

<h1>Créer une nouvelle séance</h1>
<h4>Pour le film "@currentFilm?.Titre"</h4>

<div class="mb-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@currentFilm?.Titre (@currentFilm?.Annee)</h5>
            <p class="card-text"><strong>Genre :</strong> @currentFilm?.Genre</p>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <input asp-for="SalleCinemaNom" class="form-control" placeholder="Nom du cinéma" />
                        <label asp-for="SalleCinemaNom" class="form-label">
                            Cinéma Nom
                        </label>
                        <span asp-validation-for="SalleCinemaNom" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <input asp-for="SalleNumero" class="form-control" min="1" />
                        <label asp-for="SalleNumero" class="form-label">
                            Numéro de salle
                        </label>
                        <span asp-validation-for="SalleNumero" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="HoraireId" class="form-label">
                    Horaire
                    <select asp-for="HoraireId" class="form-select" asp-items="@ViewBag.Horaires">
                        <option value="">Sélectionner un horaire</option>
                    </select>
                </label>
                <span asp-validation-for="HoraireId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateSeance" class="form-label">
                    Date de la séance
                    <input asp-for="DateSeance" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                </label>

                <span asp-validation-for="DateSeance" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tarif" class="form-label">
                    Tarif (€)
                    <input asp-for="Tarif" class="form-control" type="number" step="0.01" min="0.01" />
                </label>

                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" asp-route-filmId="@currentFilm?.Id" class="btn btn-secondary">Retour à la liste</a>
                <a asp-controller="Films" asp-action="Details" asp-route-id="@currentFilm?.Id" class="btn btn-outline-secondary">Retour au film</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}