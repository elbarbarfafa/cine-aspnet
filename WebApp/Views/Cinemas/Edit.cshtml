@using WebApp.Models.ViewModels.Cinema
@model EditCinemaViewModel

@{
    ViewData["Title"] = "Modifier le Cinéma";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Modifier le cinéma "@ViewData["CinemaName"]"
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Veuillez corriger les erreurs suivantes :</strong>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note :</strong> Le nom du cinéma ne peut pas être modifié. 
                            Seules les informations d'adresse peuvent être mises à jour.
                        </div>

                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="form-floating mb-3">
                                    <input asp-for="Rue" class="form-control" placeholder="Nom de la rue" />
                                    <label asp-for="Rue">
                                        <i class="fas fa-road me-2"></i>Nom de la rue (optionnel)
                                    </label>
                                    <span asp-validation-for="Rue" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating mb-3">
                                    <input asp-for="Numero" class="form-control" placeholder="Numéro" min="1" max="9999" />
                                    <label asp-for="Numero">
                                        <i class="fas fa-hashtag me-2"></i>Numéro d'adresse
                                    </label>
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-save me-2"></i>Sauvegarder les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Informations sur le cinéma -->
            <div class="card mt-4 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-building me-2"></i>Informations sur le cinéma
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1 small">
                                <strong>Nom du cinéma :</strong> @ViewData["CinemaName"]
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1 small">
                                <strong>Actions disponibles :</strong>
                                <a asp-controller="Salles" asp-action="Index" asp-route-cinemaNom="@ViewData["CinemaName"]" class="btn btn-sm btn-outline-primary ms-2">
                                    <i class="fas fa-door-open me-1"></i>Gérer les salles
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Animation au focus des champs
        $(document).ready(function() {
            $('.form-floating input').focus(function() {
                $(this).closest('.form-floating').addClass('focused');
            }).blur(function() {
                $(this).closest('.form-floating').removeClass('focused');
            });
        });
    </script>
    
    <style>
        .form-floating.focused {
            transform: scale(1.02);
            transition: transform 0.2s ease;
        }
        
        .card {
            transition: box-shadow 0.3s ease;
        }
        
        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
    </style>
}
