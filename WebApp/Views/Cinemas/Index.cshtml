@using WebApp.Models.ViewModels
@model PaginatedList<WebApp.Models.Entities.Cinema>

@{
    ViewData["Title"] = "Gestion des Cinémas";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary">
                <i class="fas fa-building me-2"></i>Gestion des Cinémas
            </h1>
            <p class="text-muted">Administrez votre réseau de cinémas</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-plus me-2"></i>Nouveau cinéma
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    }

    <!-- Barre de recherche -->
    <div class="card shadow mb-4">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-search me-2"></i>Rechercher un cinéma
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label for="searchString" class="form-label fw-bold">Nom ou adresse</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchString" id="searchString" 
                                   value="@ViewData["CurrentFilter"]" 
                                   class="form-control" 
                                   placeholder="Rechercher par nom ou rue..." />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="pageSize" class="form-label fw-bold">Éléments par page</label>
                        <select name="pageSize" id="pageSize" class="form-select">
                            @foreach (var size in new[] { 5, 10, 20, 50 })
                            {
                                <option value="@size" selected="@(size == Model.PageSize)">@size éléments</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des cinémas -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Liste des cinémas (@Model.Items.Count() sur @(Model.PageIndex * Model.PageSize))
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="fw-bold">
                                    <i class="fas fa-building me-2"></i>Nom du cinéma
                                </th>
                                <th scope="col" class="fw-bold">
                                    <i class="fas fa-map-marker-alt me-2"></i>Adresse
                                </th>
                                <th scope="col" class="text-center fw-bold" style="min-width: 250px;">
                                    <i class="fas fa-cogs me-2"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <i class="fas fa-building"></i>
                                            </div>
                                            <div>
                                                <strong>@item.Nom</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Rue))
                                        {
                                            <span>@item.Numero @item.Rue</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Adresse non spécifiée</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                            <a asp-action="Details" asp-route-id="@item.Nom" 
                                               class="btn btn-outline-info" title="Voir les détails">
                                                <i class="fas fa-eye me-1"></i>Détails
                                            </a>
                                            <a asp-controller="Salles" asp-action="Index" asp-route-cinemaNom="@item.Nom"
                                               class="btn btn-outline-success" title="Gérer les salles">
                                                <i class="fas fa-door-open me-1"></i>Salles
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Nom" 
                                               class="btn btn-outline-warning" title="Modifier">
                                                <i class="fas fa-edit me-1"></i>Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Nom" 
                                               class="btn btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash me-1"></i>Supprimer
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun cinéma trouvé</h5>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                        {
                            <span>Aucun résultat pour "@ViewData["CurrentFilter"]". Essayez un autre terme de recherche.</span>
                        }
                        else
                        {
                            <span>Commencez par ajouter votre premier cinéma.</span>
                        }
                    </p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Ajouter le premier cinéma
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.Items.Any() && Model.TotalPages > 1)
    {
        <nav aria-label="Navigation des pages" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            pageNumber = Model.PageIndex - 1, 
                            pageSize = Model.PageSize,
                            searchString = ViewData["CurrentFilter"]
                        })">
                            <i class="fas fa-chevron-left me-1"></i>Précédent
                        </a>
                    </li>
                }

                @for (var i = Math.Max(1, Model.PageIndex - 2); i <= Math.Min(Model.TotalPages, Model.PageIndex + 2); i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            pageNumber = i, 
                            pageSize = Model.PageSize,
                            searchString = ViewData["CurrentFilter"]
                        })">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            pageNumber = Model.PageIndex + 1, 
                            pageSize = Model.PageSize,
                            searchString = ViewData["CurrentFilter"]
                        })">
                            Suivant<i class="fas fa-chevron-right ms-1"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

