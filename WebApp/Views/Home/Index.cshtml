@using WebApp.Models.ViewModels.Home
@model HomeIndexViewModel

@{
    ViewData["Title"] = "Cinéma - Accueil";
}

<div class="container-fluid">
    <!-- En-tête principal -->
    <div class="hero-section bg-dark text-white py-5 mb-5 rounded">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">
                <i class="fas fa-film me-3"></i>Bienvenue dans votre cinéma
            </h1>
            <p class="lead">Découvrez les films à l'affiche et trouvez vos séances</p>
        </div>
    </div>

    <!-- Navigation par onglets -->
    <div class="card shadow mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.SearchType == "cinema" ? "active" : "")" 
                       href="@Url.Action("Index", new { searchType = "cinema" })" role="tab">
                        <i class="fas fa-building me-2"></i>Rechercher un cinéma
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.SearchType == "film" ? "active" : "")" 
                       href="@Url.Action("Index", new { searchType = "film" })" role="tab">
                        <i class="fas fa-search me-2"></i>Rechercher un film
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model.SearchType == "today" ? "active" : "")" 
                       href="@Url.Action("Index", new { searchType = "today" })" role="tab">
                        <i class="fas fa-calendar-day me-2"></i>Séances du jour
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @if (Model.SearchType == "cinema")
            {
                <!-- Recherche de cinéma -->
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <form method="get" class="mb-4">
                            <input type="hidden" name="searchType" value="cinema" />
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="fas fa-building"></i>
                                </span>
                                <input type="text" name="searchCinema" value="@Model.SearchCinema" 
                                       placeholder="Nom du cinéma..." class="form-control" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>Rechercher
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (Model.Cinemas.Any())
                {
                    <div class="row g-4">
                        @foreach (var cinema in Model.Cinemas)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="card h-100 cinema-card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="card-title mb-0">
                                            <i class="fas fa-building me-2"></i>@cinema.Nom
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text">
                                            <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                            @if (!string.IsNullOrEmpty(cinema.Rue))
                                            {
                                                <span>@cinema.Numero @cinema.Rue</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Adresse non spécifiée</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("Index", new { searchType = "today", cinemaName = cinema.Nom })" 
                                               class="btn btn-success">
                                                <i class="fas fa-ticket-alt me-2"></i>Voir les séances du jour
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">
                            @if (string.IsNullOrEmpty(Model.SearchCinema))
                            {
                                <span>Aucun cinéma disponible</span>
                            }
                            else
                            {
                                <span>Aucun cinéma trouvé pour "@Model.SearchCinema"</span>
                            }
                        </h5>
                    </div>
                }
            }
            else if (Model.SearchType == "film")
            {
                <!-- Recherche de film -->
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <form method="get" class="mb-4">
                            <input type="hidden" name="searchType" value="film" />
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="fas fa-film"></i>
                                </span>
                                <input type="text" name="searchFilm" value="@Model.SearchFilm" 
                                       placeholder="Titre du film..." class="form-control" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>Rechercher
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (Model.FilmSeances.Any())
                {
                    @foreach (var filmSeance in Model.FilmSeances)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-success text-white">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="mb-0">
                                            <i class="fas fa-film me-2"></i>@filmSeance.Film.Titre
                                        </h5>
                                    </div>
                                    <div class="col-auto">
                                        <span class="badge bg-light text-dark">@filmSeance.Film.Annee</span>
                                        <span class="badge bg-info">@filmSeance.Film.Genre</span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (filmSeance.SeancesByCinema.Any())
                                {
                                    <div class="row g-3">
                                        @foreach (var cinemaSeance in filmSeance.SeancesByCinema)
                                        {
                                            <div class="col-lg-6">
                                                <div class="border rounded p-3 h-100">
                                                    <h6 class="text-primary mb-3">
                                                        <i class="fas fa-building me-2"></i>@cinemaSeance.Cinema.Nom
                                                    </h6>
                                                    <div class="seances-grid">
                                                        @foreach (var seance in cinemaSeance.Seances.Take(6))
                                                        {
                                                            <span class="badge bg-secondary me-2 mb-2">
                                                                <i class="fas fa-clock me-1"></i>
                                                                @seance.DateSeance.ToString() 
                                                                @seance.Horaire.HeureDebut.ToString()
                                                            </span>
                                                        }
                                                        @if (cinemaSeance.Seances.Count > 6)
                                                        {
                                                            <small class="text-muted">... et @(cinemaSeance.Seances.Count - 6) autres séances</small>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <i class="fas fa-info-circle text-muted me-2"></i>
                                        <span class="text-muted">Aucune séance programmée pour ce film</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-film fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">
                            @if (string.IsNullOrEmpty(Model.SearchFilm))
                            {
                                <span>Recherchez un film pour voir ses séances</span>
                            }
                            else
                            {
                                <span>Aucun film trouvé pour "@Model.SearchFilm"</span>
                            }
                        </h5>
                    </div>
                }
            }
            else if (Model.SearchType == "today")
            {
                <!-- Séances du jour -->
                <div class="mb-4">
                    <div class="alert alert-info">
                        <h6 class="alert-heading mb-2">
                            <i class="fas fa-calendar-day me-2"></i>Séances du @DateTime.Today.ToString("dddd dd MMMM yyyy")
                        </h6>
                        <p class="mb-0">Découvrez toutes les séances programmées aujourd'hui dans nos cinémas.</p>
                    </div>
                </div>

                @if (Model.TodaySeances.Any())
                {
                    @foreach (var cinemaSeance in Model.TodaySeances)
                    {
                        <div class="card mb-4">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-building me-2"></i>@cinemaSeance.Cinema.Nom
                                    <small class="float-end">
                                        @cinemaSeance.FilmSeances.Sum(f => f.Seances.Count) séance(s)
                                    </small>
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (cinemaSeance.FilmSeances.Any())
                                {
                                    <div class="row g-4">
                                        @foreach (var filmSeance in cinemaSeance.FilmSeances)
                                        {
                                            <div class="col-lg-6">
                                                <div class="film-seance-card">
                                                    <h6 class="text-success mb-3">
                                                        <i class="fas fa-film me-2"></i>@filmSeance.Film.Titre
                                                        <small class="text-muted">(@filmSeance.Film.Annee)</small>
                                                    </h6>
                                                    <div class="seances-today">
                                                        @foreach (var seance in filmSeance.Seances)
                                                        {
                                                            <div class="seance-item d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                                                                <div>
                                                                    <span class="fw-bold">
                                                                        <i class="fas fa-clock me-1"></i>
                                                                        @seance.Horaire.HeureDebut.ToString() - @seance.Horaire.HeureFin.ToString()
                                                                    </span>
                                                                    <small class="text-muted d-block">
                                                                        <i class="fas fa-door-open me-1"></i>Salle @seance.Salle.Numero
                                                                    </small>
                                                                </div>
                                                                <div>
                                                                    <span class="badge bg-success">@seance.Tarif.ToString("C")</span>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <i class="fas fa-info-circle text-muted me-2"></i>
                                        <span class="text-muted">Aucune séance programmée aujourd'hui</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-day fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucune séance programmée pour aujourd'hui</h5>
                        <p class="text-muted">Revenez demain pour découvrir la programmation !</p>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .cinema-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .cinema-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        
        .seances-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 0.25rem;
        }
        
        .film-seance-card {
            padding: 1rem;
            border: 1px solid #e9ecef;
            border-radius: 0.375rem;
            background-color: #f8f9fa;
            height: 100%;
        }
        
        .seance-item {
            background-color: white;
            transition: background-color 0.2s ease;
        }
        
        .seance-item:hover {
            background-color: #f8f9fa;
        }
        
        .nav-tabs .nav-link {
            color: #6c757d;
        }
        
        .nav-tabs .nav-link.active {
            font-weight: 600;
        }
    </style>
}
